<%
  current_host = (HostUrl.context_host(asset.merge_candidates.first.pseudonym.account) rescue nil) || HostUrl.default_host
  new_host     = (HostUrl.context_host((asset.pseudonym || asset.user.pseudonym).account) rescue nil) || HostUrl.default_host
%>

<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= current_host %>/register/<%= asset.confirmation_code %>
<% end %>

<% define_content :subject do %>
  <%= t('subject', 'New Sublime LMS Account') %>
<% end %>
<% url = (HostUrl.context_host((asset.pseudonym || asset.user.pseudonym).account) rescue nil) || HostUrl.default_host %>
<p><%= t :account_created, "An account has been created for you at %{url}, but you already have a Sublime LMS account.", :url => url %></p>
<p><%= t :merge, "If you would like to merge them together, <a href=\"%{link}\">click here</a>", :link => content(:link) %></p>
